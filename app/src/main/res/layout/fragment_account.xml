<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundWhite">

    <include layout="@layout/include_backable"/>

    <LinearLayout
            android:id="@+id/fxaAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:overScrollMode="ifContentScrolls"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/gray_73_percent"
                android:gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:lineSpacingExtra="7.5sp"
                tools:text="@string/email_example"
        />

        <TextView
                android:id="@+id/disconnectSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/textGrey"
                android:lineSpacingExtra="7.5sp"
                android:gravity="center_horizontal"
                tools:text="@string/disconnect_account_summary"
        />

        <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:textAlignment="gravity"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                tools:text="@string/button_title"
        />

        <TextView
                android:id="@+id/buttonSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/textGrey"
                android:lineSpacingExtra="7.5sp"
                android:gravity="center_horizontal"
                tools:text="@string/button_summary"
        />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>


