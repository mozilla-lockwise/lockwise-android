<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboardingBiometricUnlock"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/onboardingTop"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:backgroundTint="@color/color_primary"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
                android:id="@+id/iconLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_primary"
                app:srcCompat="@drawable/ic_lock_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/onboardingBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/background_white"
            app:layout_constraintTop_toBottomOf="@id/onboardingTop"
    >
        <TextView
                android:id="@+id/unlockWithFingerprintTitle"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/text_grey"
                android:lineSpacingExtra="6sp"
                android:gravity="center_horizontal"
                android:text="@string/onboarding_unlock_title"
                android:layout_marginTop="30dp"
                android:layout_marginStart="43dp"
                android:layout_marginEnd="43dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
                android:id="@+id/unlockDescription"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/text_grey"
                android:lineSpacingExtra="5sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="@string/onboarding_unlock_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlockWithFingerprintTitle"
        />

        <ImageView
                android:id="@+id/iconFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="14dp"
                app:srcCompat="@drawable/ic_fingerprint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlockDescription"
        />

        <TextView
                android:id="@+id/sensorDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/touch_fingerprint_sensor"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/gray_73_percent"
                android:lineSpacingExtra="6.5sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="31dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconFingerprint"

        />

        <Button
                android:id="@+id/skipOnboarding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_skip"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/color_primary"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:drawablePadding="10dp"
                android:shadowColor="@color/background_white"
                android:backgroundTint="@color/background_white"
                android:stateListAnimator="@null"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sensorDescription"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>