<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">
    <item android:drawable="@color/background_white"/>

    <item android:top="@dimen/logo_top_margin"
          android:height="@dimen/logo_size"
          android:width="@dimen/logo_size"
          android:background="@null"
          android:gravity="top|center_horizontal" >
        <bitmap android:src="@drawable/ic_lockwise_glyph"
        />
    </item>

    <item android:top="@dimen/app_name_top_margin"
          android:gravity="top|center_horizontal" >
        <bitmap android:src="@drawable/ic_title"
                android:gravity="center_horizontal"/>
    </item>
</layer-list>